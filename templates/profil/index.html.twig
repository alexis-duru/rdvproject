{% extends 'base.html.twig' %}

{% block title %}PROFIL{% endblock %}

{% block body %}
<section class="section-profil">
    <div class="container-profil">
            <img src="../assets/img/persona.jpg">
            <h2>PROFIL</h2>
            <div class="infos">
                <p><i class="fas fa-user"></i> Username : {{ app.user.username }}</p>
                <p><i class="fas fa-envelope"></i> E-mail : {{ app.user.email }}</p>
                <p><i class="fas fa-phone"></i> Phone : {{ app.user.phoneNumber }}</p>
            <div class="infos">
    </div>
</section>
{% endblock %}
