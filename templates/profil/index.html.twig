{% extends 'base.html.twig' %}

{% block title %}PROFIL{% endblock %}

{% block body %}
<section class="section-profil">
    <div class="container-profil">
        <img src="../assets/img/persona.jpg">
        <h2>{{ app.user.username }}</h2>
        <div class="infos">
            <p>CONTACT</p>
            <p><i class="fas fa-envelope"></i> E-mail : {{ app.user.email }}</p>
            <p><i class="fas fa-phone"></i> Phone : {{ app.user.phoneNumber }}</p>
            <button class="btn-confirm"><a href="{{path('app_profil_edit')}}">EDIT</a></button>
        </div>
    </div>
</section>
{% endblock %}
